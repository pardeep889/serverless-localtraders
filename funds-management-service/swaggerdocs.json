        "securitySchemes": {
            "api_key": {
                "type": "apiKey",
                "name": "api_key",
                "in": "header"
            },
              "adminToken": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
              },
              "userToken": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
              }
        }
    }
